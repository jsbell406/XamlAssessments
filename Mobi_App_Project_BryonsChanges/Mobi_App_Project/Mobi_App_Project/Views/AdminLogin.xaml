<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobi_App_Project.Views.AdminLogin">

    <StackLayout>
        <Label Text="Feelings Check In: Administrator Login"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

        <Label Text="Username"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
        <Entry Text="{Binding UserName}" FontSize="Medium" />

        <Label Text="Password"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
        <Entry Text="{Binding PassWord}" FontSize="Medium"/>

        <Label Text="{Binding Message}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
       

        <Button Text="Authentication"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="Login_Clicked" />



    </StackLayout>
</ContentPage>