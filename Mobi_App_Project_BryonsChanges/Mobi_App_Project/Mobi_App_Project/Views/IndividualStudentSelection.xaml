<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobi_App_Project.Views.IndividualStudentSelection">

    

    <StackLayout Orientation="Vertical">

        <SearchBar x:Name="StudentSearchBar"
                   SearchButtonPressed="StudentSearchBar_SearchButtonPressed"
                   TextChanged="StudentSearchBar_TextChanged"
                    />

        <Grid>
            
        <ListView x:Name="SuggestionsListView"
                   ItemTapped="SuggestionsListView_ItemTapped"
                   BackgroundColor="Aqua" />
        <ListView x:Name="StudentListView {Binding studentList}"/>
           

        </Grid>


    </StackLayout>

</ContentPage>