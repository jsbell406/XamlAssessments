<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobi_App_Project.Views.TripleTextTemplate"
             Title="{Binding StudentFullName}"
              BackgroundImage="Image1.png">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  BackgroundColor="#D8F0F8"
                          Padding="8,8,8,8"
                          Margin="10,10,10,10"
                          >
                <Label Text="{Binding Question.DisplayText}"
                       TextColor="BlueViolet"
                       VerticalOptions="Center" 
                       HorizontalOptions="CenterAndExpand" 
                       FontSize="28" />

                <Editor Placeholder="1st answer"         
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Azure"
                    VerticalOptions="FillAndExpand"     
                    Completed="First_OnEditorCompleted" />

                <Editor Placeholder="2nd answer"       
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Azure"
                    VerticalOptions="FillAndExpand"      
                    Completed="Second_OnEditorCompleted" />

                <Editor Placeholder="3rd answer"            
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Azure"
                    VerticalOptions="FillAndExpand"
                    Completed="Third_OnEditorCompleted" />

                <Button Text="Done"
                        FontSize="Large"
                        BackgroundColor="#B9A5F2"
                    Clicked="Done_Clicked"/>
                
                <Button Text="Notes"
                    x:Name="btnNotesDone"                  
                    Padding="3,3,3,3"
                    BackgroundColor="#4FBDDD"
                    FontSize="Small"
                    Clicked="Notes_Clicked"/>

                <Editor    
                    Text="{Binding Result.AssessmentQuestionInstructorNotes}"
                    x:Name="questionNotes"
                    HorizontalOptions="FillAndExpand"                  
                    VerticalOptions="FillAndExpand"
                    Completed="Third_OnEditorCompleted" 
                    />

                <Button Text="Done"
                    x:Name="notesButton"                              
                    BackgroundColor="#4FBDDD"
                    FontSize="12"
                    Clicked="Notes_Done_Clicked"
                    />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>